{
    "name": "salavati/sapak-sms-php",
    "description": "A lightweight PHP SDK for SAPAK SMS API",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Ali Salavati",
            "email": "salavati.cuber@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.1",
        "guzzlehttp/guzzle": "^7.10",
        "morilog/jalali": "3.*"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.4"
    },
    "autoload": {
        "psr-4": {
            "Sapak\\Sms\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sapak\\Sms\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html build/coverage"
    }
}
